<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Pink_1"
    >




    <Button
        android:id="@+id/button"
        android:layout_width="390dp"
        android:background="@drawable/custom_bo_goc"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Sơ đồ phục vụ" />



    <Button
        android:id="@+id/button2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/red"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"

        android:text="" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="65dp"
        android:textSize="18dp"
        android:text="Đặc trước" />

    <Button
        android:id="@+id/button3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/teal_700"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="170dp"
        android:text="" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="205dp"
        android:textSize="18dp"
        android:text="Hoạt động" />


    <Button
        android:id="@+id/button4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/yellow"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="305dp"
        android:text="" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="339dp"
        android:textSize="18dp"
        android:text="Trống" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="170dp"
        android:textSize="18dp"
        android:text="Trạng thái:" />

    <Spinner
        android:id="@+id/sprTrangThai"
        android:layout_width="120dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="260dp"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_marginTop="130dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

    </ScrollView>


</RelativeLayout>
</ScrollView>