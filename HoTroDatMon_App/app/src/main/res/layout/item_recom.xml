<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/Pink_1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="70dp"

                >
                <ImageView
                    android:id="@+id/imgHinhMon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/banhxeo"
                    app:cardCornerRadius="200dp" />

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="184dp"
                android:layout_height="250dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_bo_goc">

                <TextView
                    android:id="@+id/txtTenMon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="120dp"
                    android:text="Bánh xèo Miền tây quê"
                    android:textColor="@color/Pink_1"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtMoTa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="140dp"
                    android:textSize="13sp"
                    android:text="Là món ăn quen thuộc của vùng Đồng Bằng Sông Cửu Long, tạo nên hương vị rõ nét của mùi hoa cỏ" />

                <TextView
                    android:id="@+id/txtDonGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="210dp"
                    android:background="@drawable/bogoc_pink4"
                    android:padding="3dp"
                    android:text="200.000 đ"
                    android:textColor="@color/Pink_1"
                    android:textSize="18sp"

                    android:textStyle="bold" />
            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>