<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/Pink_1"
    >


    <ImageView
        android:id="@+id/img_hinhanh"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:scaleType="centerCrop"
        app:cardCornerRadius="200dp"
        android:src="@drawable/bachtuoc"/>

    <TextView
        android:id="@+id/txtTenMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="10dp"
        android:text="Mực sào sa tế"
        android:textSize="20dp"
        android:textColor="@color/Pink_4"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtsl_dg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="90dp"
        android:textSize="17dp"
        android:text="2 x 300.000đ" />

    <TextView
        android:id="@+id/txtThanhTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="14dp"
        android:layout_marginLeft="310dp"
        android:text="+10.000.000đ" />

    <EditText
        android:id="@+id/edtSL"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="phone" />


</RelativeLayout>