<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Pink_1">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi,"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/txtNV"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="####"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:text="Are you ready to work\ntoday yet?"
                android:textSize="28dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/homee" />



            <RelativeLayout
                android:layout_marginTop="150dp"
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <ViewFlipper
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoStart="true"
                    android:flipInterval="2000"
                    android:inAnimation="@android:anim/slide_in_left"
                    android:outAnimation="@android:anim/slide_out_right">


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/noithatnha1" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/noithatnha2" />

                    <ImageView
                        android:id="@+id/imageView22"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/noithatnha3" />



                </ViewFlipper>
            </RelativeLayout>



            <HorizontalScrollView
                android:id="@+id/horizotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="345dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommended:"
                android:textSize="20dp"
                android:layout_marginTop="400dp"
                android:layout_marginLeft="20dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_Muc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="430dp" />


        </RelativeLayout>
    </ScrollView>

