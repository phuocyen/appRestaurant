<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="125dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="20dp"

    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutItem"

        >

        <ImageView
            android:id="@+id/img_hinh"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/banhxeo" />

        <TextView
            android:id="@+id/txtTenMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_hinh"
            android:layout_centerHorizontal="true"
            android:text="Bánh xèo Miền tây"
            android:textColor="@color/Pink_4"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTenMon"
            android:layout_centerHorizontal="true"
            android:text="300.000đ"
            android:textSize="12sp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>