<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Pink_1"
    >


    <TextView
        android:id="@+id/txtSoBan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="10dp"
        android:text="Bàn 01" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_below="@+id/txtSoBan"
        android:layout_marginLeft="20dp"
        android:text="Khách hàng:" />

    <TextView
        android:id="@+id/txtTenKhach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_below="@+id/txtSoBan"
        android:layout_marginLeft="130dp"
        android:text="####" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="20dp"
        android:text="SĐT:" />



    <TextView
        android:id="@+id/txtSDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_below="@+id/txtTenKhach"
        android:layout_marginLeft="130dp"
        android:text="####" />

    <HorizontalScrollView
        android:id="@+id/horizotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtSDT"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>

    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@+id/horizotal"
        android:layout_marginTop="14dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvMon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <EditText
        android:id="@+id/edtTimKiem"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@color/white"
        android:inputType="textPersonName"
        android:layout_marginTop="620dp"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/btnTim"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="620dp"
        android:background="@drawable/custom_bo_goc"
        android:text="B" />


</RelativeLayout>